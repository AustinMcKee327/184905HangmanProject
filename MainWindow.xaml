<Window x:Class="_184905HangmanProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184905HangmanProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <RadioButton x:Name="EasyMode" Content="Easy"/>
        <RadioButton x:Name="MediumMode" Content="Medium" />
        <RadioButton x:Name="HardMode" Content="Hard"/>
        <Button x:Name="StartGame" Content="Click to start a new game!" Click="StartGame_Click"/>
        <TextBox x:Name="LetterInput" MaxLength="1"/>
        <Button x:Name="LetterCheck" Content="Click to Check for Letter" Click="LetterCheck_Click"/>
        <TextBlock x:Name="OutputWords"/>
        <Canvas x:Name="Stickman"/>
    </StackPanel>
</Window>
